{% extends "DigsCoreBundle::base.html.twig" %}

{% form_theme form _self %}
{% block choice_widget_expanded %}
{% spaceless %}
    {% for child in form %}
    <div {{ block('widget_container_attributes') }}>
        {{ form_widget(child) }}
{#
        {{ form_label(child) }}
#}
    </div>
    {% endfor %}
{% endspaceless %}
{% endblock choice_widget_expanded %}
{% block checkbox_widget %}
{% spaceless %}
<label>
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
    {% if label is not sameas(false) %}
{#
        {% if not compound %}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {% endif %}
#}
        {% if required %}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {% endif %}
        {% if label is empty %}
            {% set label = name|humanize %}
        {% endif %}
        {{ label|trans({}, translation_domain) }}
    {% endif %}
</label>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block body -%}
    <h2>ユーザーの追加</h2>
<div class="row">
    <div class="col-md-6">
    {{ form_start(form) }}
    {{ form_errors(form) }}
        <div class="form-group">
    {{ form_label(form.email, 'メールアドレス') }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label style="margin-bottom: 0">グループ</label>
    {{ form_errors(form.group) }}
    {{ form_widget(form.group, {'attr': {'class': 'checkbox'}}) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">招待メールを送信</button>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
