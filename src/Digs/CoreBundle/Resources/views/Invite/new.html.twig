{% extends "DigsCoreBundle::base.html.twig" %}

{% form_theme form 'DigsCoreBundle:Form:form_bootstrap_layout_expanded_checkbox.html.twig' %}

{% block body -%}
<h2>ユーザーの追加</h2>
<div class="row">
    <div class="col-md-6">
    {{ form_start(form) }}
    {{ form_errors(form) }}
        <div class="form-group">
    {{ form_label(form.email, 'メールアドレス') }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label style="margin-bottom: 0">グループ</label>
    {{ form_errors(form.group) }}
    {{ form_widget(form.group, {'attr': {'class': 'checkbox'}}) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">招待メールを送信</button>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
