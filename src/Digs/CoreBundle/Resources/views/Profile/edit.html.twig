{% extends "DigsCoreBundle::base.html.twig" %}

{% block body -%}
    <h2>プロフィールの編集</h2>
<div class="row">
    <div class="col-md-6">
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
        <div class="form-group">
    {{ form_label(edit_form.nickname, 'ニックネーム') }}
    {{ form_errors(edit_form.nickname) }}
    {{ form_widget(edit_form.nickname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
    {{ form_label(edit_form.profileImage, 'プロフィール画像') }}
    {{ form_errors(edit_form.profileImage) }}
            <div class="input-group">
                <span class="input-group-addon">
                    <img src="{{ path('profile_image_show', { 'id': app.user.profile.id }) }}" style="width: 128px;">
                </span>
    {{ form_widget(edit_form.profileImage, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
    {{ form_label(edit_form.message, '自己紹介') }}
    {{ form_errors(edit_form.message) }}
    {{ form_widget(edit_form.message, {'attr': {'class': 'form-control', 'rows': 3}}) }}
        </div>
        <div class="form-group">
    {{ form_label(edit_form.entryLead, 'エントリページタイトル') }}
    {{ form_errors(edit_form.entryLead) }}
    {{ form_widget(edit_form.entryLead, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">保存</button>
        </div>
    {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}
