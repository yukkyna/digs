{% extends "DigsCoreBundle::base.html.twig" %}

{% block body -%}
    <h2>パスワードの変更</h2>
<div class="row">
    <div class="col-md-6">
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
        <div class="form-group">
    {{ form_label(edit_form.currentPassword, '現在のパスワード') }}
    {{ form_errors(edit_form.currentPassword) }}
    {{ form_widget(edit_form.currentPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
    {{ form_label(edit_form.newPassword.first, '新しいパスワード') }}
    {{ form_errors(edit_form.newPassword.first) }}
    {{ form_widget(edit_form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
    {{ form_label(edit_form.newPassword.second, 'パスワードの確認') }}
    {{ form_widget(edit_form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">変更</button>
        </div>
    {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}
