<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
{#
        <link rel="stylesheet" href="{{ asset('bundles/digscore/css/normalize.css') }}" type="text/css" media="all" />
#}
        <link rel="stylesheet" href="{{ asset('bundles/digscore/bootstrap/css/bootstrap.min.css') }}" type="text/css" media="all" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('digs_core_homepage') }}">Digs</a>
                </div>
{% if app.user %}
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
{% for item in navigation.items %}
                        <li><a href="{{ path(item.path) }}">{{ item.title }}</a></li>
{% endfor %}
                    </ul>
{#
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
#}
                    <ul class="nav navbar-nav navbar-right">
{#
                        <li><a href="../navbar/">Default</a></li>
                        <li class="active"><a href="./">Static top</a></li>
                        <li><a href="../navbar-fixed-top/"></a></li>
#}

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                {{ app.user.profile.nickname }}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
{% for item in mymenu.items %}
                                <li><a href="{{ path(item.path) }}">{{ item.title }}</a></li>
{% endfor %}
                                <li class="divider"></li>
                                <li><a href="{{ path('profile_password_edit') }}">パスワードの変更</a></li>
{% if is_granted('ROLE_ADMIN') %}
                                <li class="divider"></li>
                                <li><a href="{{ path('invite_new') }}">ユーザーの追加</a></li>
{% endif %}
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}">ログアウト</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
{% endif %}
            </div>
        </div>
        <div class="container">
{% block body %}{% endblock %}
        </div>
{#
        <div id="footer" style="background-color: #f5f5f5">
            <div class="container">
                <p class="text-muted">digs</p>
            </div>
        </div>
#}
        <script type="text/javascript" src="{{ asset('bundles/digscore/js/jquery-2.0.3.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/digscore/bootstrap/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
