<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
{#
        <link rel="stylesheet" href="{{ asset('bundles/digscore/css/normalize.css') }}" type="text/css" media="all" />
#}
        <link rel="stylesheet" href="{{ asset('bundles/digscore/css/digs.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/digscore/bootstrap/css/bootstrap.min.css') }}" type="text/css" media="all" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('digs_core_homepage') }}">Digs</a>
                </div>
{% if app.user %}
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
{% for item in navigation.items %}
                        <li><a href="{{ path(item.path) }}">{{ item.title }}</a></li>
{% endfor %}
                    </ul>
{#
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
#}
                    <ul class="nav navbar-nav navbar-right">
{#
                        <li><a href="../navbar/">Default</a></li>
                        <li class="active"><a href="./">Static top</a></li>
                        <li><a href="../navbar-fixed-top/"></a></li>
#}

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                {{ app.user.profile.nickname }}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
{% if mymenu.items.global|length > 0 %}
    {% for item in mymenu.items.global %}
                                <li><a href="{{ path(item.path) }}">{{ item.title }}</a></li>
    {% endfor %}
                                <li class="divider"></li>
{% endif %}

{% if mymenu.items.private|length > 0 %}
    {% for item in mymenu.items.private %}
                                <li><a href="{{ path(item.path) }}">{{ item.title }}</a></li>
    {% endfor %}
                                <li class="divider"></li>
{% endif %}

{% set adminitem=0 %}
    {% for item in mymenu.items.admin %}
        {% if item.role is defined and is_granted(item.role) %}
                                <li><a weight="{{ item.weight }}" href="{{ path(item.path) }}">{{ item.title }}</a></li>
            {% set adminitem = 1 %}
        {% endif %}
    {% endfor %}
{% if adminitem == 1 %}
                                <li class="divider"></li>
{% endif %}
                                <li><a href="{{ path('logout') }}">ログアウト</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
{% endif %}
            </div>
        </div>
        <div class="container">
{% block body %}{% endblock %}
        </div>

{% if app.user %}
        <footer class="digs-footer">
            <div class="container">
{% for item in footerpanel.items %}
    {{ render(controller(item.controller, item.parameters)) }}
{% endfor %}
                <p class="text-center"><a href="https://github.com/yukkyna/digs">digs</a></p>
            </div>
        </footer>
{% endif %}

        <script type="text/javascript" src="{{ asset('bundles/digscore/js/jquery-2.0.3.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/digscore/bootstrap/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
