{% extends "DigsCoreBundle::base.html.twig" %}

{% block body -%}
    <h1>Link list</h1>

    <div class="text-right">
        <a href="{{ path('link_new') }}">新しいリンクを追加</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th><input type="checkbox" id="check-all" /></th>
                <th>Name</th>
                <th>Url</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><input type="checkbox" class="link-checkbox" value="{{ entity.id }}" /></td>
                <td>{{ entity.name }}</td>
                <td><a href="{{ entity.url }}">{{ entity.url }}</a></td>
                <td>
                    <a href="{{ path('link_edit', { 'id': entity.id }) }}">編集</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-danger" id="delete-checked">チェックしたリンクを削除</a>
    {% endblock %}
