
{% if entities|length > 0 %}
<div class="text-center">
{% set m = 0 %}
{% for entity in entities %}
    {% if m < entity.cnt %}
    {% set m = entity.cnt %}
    {% endif %}
{% endfor %}
{% for entity in entities %}
    {% set fs = entity.cnt / m * 200 %}
    {% if fs < 60 %}
    {% set fs = 60 %}
    {% endif %}
    <a class="btn btn-sm btn-default" style="font-size: {{ fs }}%" href="{{ path('entry', { 'tag': entity.name }) }}">{{ entity.name }}</a>
{% endfor %}
</div>
{% endif %}
