{% if entities|length > 0 %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">エントリ</h2>
    </div>
    <ul class="list-group">
    {% for entity in entities %}
        <li class="list-group-item">
            <h3><a href="{{ path('entry_show', { 'id': entity.id }) }}" title="{{ entity.title }}">{{ entity.title|truncate(100) }}</a></h3>
            {% if entity.tags|length > 0 %}
            <p><span class="glyphicon glyphicon-tags"></span>
                {% for tag in entity.tags %}
                &nbsp;{{ tag.name }}
                {% endfor %}
            </p>
            {% endif %}
            <p>{{ entity.escapedMessage|truncate(200) }}</p>
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-right">
                        <a href="{{ path('profile_show', { 'id': entity.member.id }) }}">
                            <img src="{{ path('profile_image_show', { 'id': entity.member.id}) }}" alt="profile" style="width:32px"/>
                        </a>
                        <a href="{{ path('profile_show', { 'id': entity.member.id }) }}">{{ entity.member.profile.nickname }}</a>
                        <small>{{ entity.updatedAt|date('Y-m-d H:i:s')  }}</small>
                    </div>
                </div>
            </div>
        </li>
    {% endfor %}
    </ul>
</div>
{% endif %}
