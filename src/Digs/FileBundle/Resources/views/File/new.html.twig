{% extends "DigsCoreBundle::plane.html.twig" %}
{% block javascripts %}
<script type="text/javascript">
    var UploadedFilePage = {
        init: function()
        {
            if ($('.alert-danger').length)
            {
                window.parent.SelectPhotoPage.showUploadError($('.alert-danger'));
            }
            else
            {
                window.parent.SelectFilePage.reload();
            }
        }
    };
    $(document).ready(UploadedFilePage.init);
</script>
{% endblock %}

